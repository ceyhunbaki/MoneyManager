<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <TextView
        android:id="@+id/l2column1"
        style="@style/CombinedListLabelNew.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/l2column2"
        android:text="@string/azn"
        android:textColor="@drawable/color_selector"
        android:onClick="myClickHandler"/>

    <TextView
        android:id="@+id/l2column2"
        style="@style/CombinedListLabelNew.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/igDebMenu"
        android:gravity="right|center_vertical"
        android:text="AZN"
        android:textColor="@drawable/color_selector"
        android:onClick="myClickHandler" />

    <ImageButton
        android:id="@+id/igDebMenu"
        style="@style/ThemeNew.TransImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/l2column2"
        android:layout_alignTop="@+id/l2column2"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:onClick="myClickHandler"
        android:src="@drawable/edit_new" >
    </ImageButton>
</RelativeLayout>
